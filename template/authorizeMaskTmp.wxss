/*添加授权最高蒙层*/
.authorize-mask{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 9999;
}
.authorize-mask button{
  width: 100%;
  height: 100%;
  padding: 0;
  background: none;
}

.authorize-mask button::after {
  border: none;
}
