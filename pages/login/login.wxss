image{
  width: 100%;display: block;
}
page{
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
  font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
.title{
  position: relative;
  padding: 60rpx 36rpx 0;
  text-align: center;
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  justify-content: center;
}
.title .title-text{
  position: relative;
  display: block;
  color: #cdcfd0;
  width: 190rpx;  
  margin: 0 auto;
  padding: 0 10rpx;
  font-size: 24rpx;
  background-color: #fff;
}

.title .title-line{
  flex: 1;
  width: 100%;
  height: 1rpx;
  margin-top: 20rpx;
  background-color: #E5E5E5;
}

.login-btn{
  position: relative;
  padding:  50rpx 36rpx 0;
}
.login-btn button{
  position: relative;
  background: linear-gradient(to right, #ff8400, #ff5400, #d76204);
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
}
.login-btn button .btn-icon{
  display: block;
  margin-right: 20rpx;
  width: 60rpx;
  height: 100%;
  /*background: url(http://lcl_uuweb.hftsoft.com/Public/wxApp/images/login/wechat_icon.png) center center no-repeat;*/
  background: url(http://uuweb.haofang.net/Public/wxApp/images/login/wechat_icon.png) center center no-repeat;
  background-size: 60rpx 60rpx;
}
.login-btn button .btn-text{
  display: block;
  height: 100rpx;
  line-height: 100rpx;
}