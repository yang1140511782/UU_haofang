/* pages/houseRegisterIndex/index.wxss */
@import "../../component/localCityToast/localCityToast.wxss";
.cam-app {
    width: 100%;
    min-height: 100%;
    position: relative;
    margin: 0 auto;
    background-color: #f6f6f6;
}
.cam-header {
    position: relative;
    padding: 34rpx 26rpx 0;
    margin: 0 auto;
    margin-bottom: 34rpx;
}
.cam-header image {
    width: 100%;
}
.cam-header-btn {
    display: block;
    position: absolute;
    color: #fff;
    font-size: 28rpx;
    width: 260rpx;
    height: 64rpx;
    line-height: 64rpx;
    bottom: 102rpx;
    left: 50%;
    margin-left: -130rpx;
    text-align: center;
    background-color: rgba(0,0,0,.6);
}
.cam-content {
    padding: 0 26rpx 40rpx;
}
.cam-content .cam-want-btn {
    position: relative;
    background-color: #fff;
    width: 100%;
    height: 164rpx;
    display: -webkit-box;
    -webkit-box-align: center;
    border-bottom: 4rpx solid #dbdbdb;
    border-radius: 8rpx;
}
.cam-content .cam-want-btn:not(:last-child) {
    margin-bottom: 22rpx;
}
.cam-li-icon {
    margin-left: 24rpx;
    margin-right: 26rpx;
    width: 100rpx;
    height: 100rpx;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center center;
}
.cam-icon-sale {
    background-image: url("https://uuweb.haofang.net/PublicC/images/campaign_sale_icon.png");
}
.cam-li-content {
    -webkit-box-flex: 1;
}
.cam-li-content view:nth-child(1) {
    color: #666;
    font-size: 30rpx;
}
.cam-li-content view:nth-child(2) {
    color: #999;
    font-size: 24rpx;
}
.cam-content .cam-want-btn::after {
    content: '';
    position: absolute;
    width: 16rpx;
    height: 24rpx;
    right: 30rpx;
    top: 50%;
    margin-top: -14rpx;
    background: url("https://uuweb.haofang.net/PublicC/images/campaign_right_arrow.png") center center no-repeat;
    background-size: 100% 100%;
}
.cam-icon-lease{
  background-image: url(https://uuweb.haofang.net/PublicC/images/campaign_lease_icon.png);
}
.cam-icon-index {
    background-image: url(https://uuweb.haofang.net/PublicC/images/campaign_index_icon.png);
}
.common{
    margin-bottom: 15rpx;
}
