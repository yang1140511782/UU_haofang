image{width: 100%;display: block;}

page{
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
  font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
.align-center{
  text-align: center;
}
::-webkit-scrollbar{width:0px;height: 0}
.cm-wrap{
  width: 100%;
  height: 100%;
  padding-top: 60rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.prince-total-txt{
  width: 100%;
  padding-left: 60rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}
.prince-total{
  font-size: 64rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.house-prince{
  text-align: center;
  font-size: 30rpx;
  margin-bottom:40rpx; 
}
.cm-particulars{
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 30rpx;
  margin-bottom: 60rpx;
}
.line-txt{
  padding: 0 20rpx;
}
.line-box{
  width: 25%;
  height: 1px;
  background: #eee;
}
.pay-text{
  position: relative;
  left: 0;
  right: 0;
  margin: auto;
  width: 80%;
  padding: 30rpx 0;
  border-top:1px dashed #eee; 
  font-size: 30rpx;
}
.pay-text text{
  float: right;
}
.pay-btn-box{
  position: relative;
  left: 0;
  right: 0;
  margin: auto;
  width: 85%;
  height: 100rpx;
  background: -webkit-linear-gradient(left, rgb(255,111,46) , rgb(254,142,13));
  line-height: 100rpx;
  color: #fff;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.reminder-txt{
  position: relative;
  left: 0;
  right: 0;
  margin: auto;
  width: 85%;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
}
.reminder-txt::before{
  content: "";  
  display: block;
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background: #00ca85;
  top: 12rpx;
  left: 0;
  border-radius: 100%;
}