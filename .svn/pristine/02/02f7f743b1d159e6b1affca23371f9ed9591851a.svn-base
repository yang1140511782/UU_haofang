page{
  height: 100%;
}
#gallery{
  padding-top: 30rpx;
  padding-left: 30rpx;
}
#gallery .each{
  overflow: hidden;
}
#gallery .each .title{
    height: 70rpx;
    box-sizing: border-box;
    padding: 12rpx 0 28rpx 0;
    font-size: 30rpx;
    line-height: 30rpx;
    color: rgb(51,51,51);
}
#gallery .each .title text{
  padding-left: 12rpx;
}
#gallery .each .picbox{
  display: flex;
  flex-wrap: wrap;
}
#gallery .each .picbox .picitem{
  width:33.3333%;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  overflow: hidden;
  height: 210rpx;
  box-sizing: border-box;
}

/*  大图  */
.mask{
  position: fixed;
  width:100%;
  height: 100%;
  top:0;
  left: 0;
  background: #000;
}
.mask .swiperbox{
  position: absolute;
  width:100%;
  height: 100%;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}
.mask .swiperbox .slide-image{
  position: absolute;
  top:0;
  bottom: 0;
  margin: auto;
}
.mask .swiperbox .infobox{
  color:#fff;
  font-size: 32rpx;
  line-height: 46rpx;
  position: absolute;
  padding-left: 30rpx;
  bottom: 32rpx;
  left: 0;
}
.mask .footer{
  position: absolute;
  bottom: 0;
  left: 0;
  width:100%;
  height: 120rpx;
  background: #000;
  overflow-x: auto;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.mask .footer .btn{
  display: inline-block;
  padding:0 20rpx;
  height: 50rpx;
  line-height:50rpx;
  text-align: center;
  border:1px solid #000;
  border-radius: 32rpx;
  color:#fff;
  font-size: 30rpx;
  flex-shrink: 0;
  margin: 0 22rpx;
}
.mask .footer .cur{
  border-color: #1bc964;
  color:#1bc964;
}
scroll-view {
display:block;
width:100%;
height:120rpx;
position:absolute;
bottom:0;
z-index:99;

}
.picboxback{
  width:100%;
  height:100%;
  background:url(https://uuweb.haofang.net/Public/wxApp/images/default/list_deafault.png) no-repeat center center;
  background-size: contain;
}
