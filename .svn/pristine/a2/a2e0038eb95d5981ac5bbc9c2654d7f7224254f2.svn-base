      var totalFloor = that.data.totalFloorArr[val[1]].value;
      var text = that.data.floorArr[val[0]].text + ' ' + that.data.totalFloorArr[val[1]].text;
      that.setData({
        _floorText: text,
        floor: floor,
        totalFloor: totalFloor,
        floorIndex: [val[0],val[1]]
      });
    },
