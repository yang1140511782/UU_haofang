/* pages/houseRegisterDetail/detail.wxss */
@import "../../component/localCityToast/localCityToast.wxss";
.main {
    width: 100%;
    margin: 0 auto;
    font-size: 28rpx;
    color: white;
}
.server image, .safe image, .specialty image{
  width: 100%;
  height: 876rpx;
}
.section-1 view:first-child,.section-3 view:first-child{
  padding-bottom: 20rpx!important;
   
}
.section-txt view:first-child{
 font-size: 50rpx;
    letter-spacing: 4rpx;
    font-weight: 500;
}
.section-1 view{
      padding: 4rpx;
}
.section-txt {
    font-size: 24rpx;
    margin-top: 31rpx;
    margin-bottom: 60rpx;
    color: #333333;
    text-align: center;
    overflow: hidden;
}
.txt-icon {
    color: #444;
    font-size: 24rpx;
    padding: 30rpx;
}
.txt-icon text {
    border: 1px solid #6f6f6f;
    padding: 4rpx 10rpx;
    border-radius: 2px;
    margin: 0 4rpx;
}
.footer {
    margin: 0 auto;
    width: 100%;
    background-color: #ffffff;
    text-align: center;
    padding-bottom: 30rpx;
    position: relative;
    z-index: 999;
}
.footer text {
    -webkit-appearance: none;
    width: 45%;
    height: 70rpx;
    font-size: 30rpx;
    border-radius: 5px;
    box-sizing: border-box;
    display: inline-block;
    line-height: 70rpx;
    text-decoration: none;
}
.lease-btn {
    background-color: #00ca85;
    border: 0;
    color: #ffffff;
}
.sale-btn {
    background-color: black;
    color: white;
    margin-left: 10rpx;
}
