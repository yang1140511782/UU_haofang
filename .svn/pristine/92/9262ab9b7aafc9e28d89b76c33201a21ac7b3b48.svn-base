page{
  height: 100%;
}
.tagName {
  height: 62rpx;
  line-height: 62rpx;
  font-size: 24rpx;
  color:#8a8a8a;
  padding-left:33rpx;
  background: #f2f2f2;
  border-bottom: 1rpx solid #dbdbdb;
}
.locatCity,.locatedCity {
  position: relative;
  height: 81rpx;
  line-height: 81rpx;
  padding-left: 78rpx;
  font-size: 27rpx;
  color:#0f0f0f;
  letter-spacing: 1px;
  background: url(http://uuweb.haofang.net/PublicC/images/icon_mylocation.png) no-repeat 31rpx center;
  background-size: 35rpx 35rpx;
}
.locatCity::after{
  content: '';
  position: absolute;
  right: 60rpx;
  top: 50%;
  margin-top: -16rpx;
  width: 32rpx;
  height: 32rpx;
  background: url(http://uuweb.haofang.net/Public/wxApp/images/index/refresh.png) center center no-repeat;
  background-size: 100% 100%;
  
}
.local-animate::after{
  -webkit-transition:all 2s ease-in-out; 
  -moz-transition:all 2s ease-in-out; 
  -o-transition:all 2s ease-in-out; 
  -webkit-transform: rotate(-360deg); 
  -moz-transform: rotate(-360deg); 
  -o-transform: rotate(-360deg); 
}

.hotBox{
  padding-top: 30rpx;
  padding-left: 40rpx;
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  width: 186rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 27rpx;
  color:#0f0f0f;
  letter-spacing: 1px;
  text-align: center;
  border-radius: 6rpx;
  border: 1rpx solid #e1e1e1;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  box-shadow:#ededed 0 3rpx 5rpx 1rpx;
}
.cityItem{
  padding-left: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  height: 90rpx;
  line-height: 90rpx;
  letter-spacing: 1px;
  color:#636363;
  font-size: 28rpx;
}
.letterBox{
  width:41rpx;
  height: 100%;
  position: fixed;
  right:0;
  top:0;
  background: #ffffff;
  z-index: 2;
  padding-top:143rpx;
  box-sizing: border-box;
}
.letter{
  color:#8c8c8c;
  line-height: 38rpx;
  text-align: center;
  font-size: 18rpx;
}