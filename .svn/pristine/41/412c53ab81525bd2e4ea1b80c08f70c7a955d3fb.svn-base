@import "../../template/authorizeMaskTmp.wxss";
page{
  margin: 0;
  padding: 0;
  background-color: #f6f6f6;
}
.content-list{
  width: 100%;
  overflow: hidden;
}
.item{
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  padding: 17rpx 26rpx;
  background-color: #fff;
  border-bottom: 1px solid #f9f9f9;
  transform: translateX(0rpx);
    -webkit-transition: 0.5s;
    -o-transition: 0.5s;
    transition: 0.5s;
}

.user-face{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right:33rpx;
  margin-left:12rpx;
}
.service{
  width:90rpx;
height:90rpx;
overflow:hidden;
margin-right:33rpx;
box-sizing:border-box;

margin-left:12rpx;
border-radius: 6rpx;

}
.user-face image{
  width: 100%;
  height: 100%;
}
.service image{
  width: 100%;
  height: 100%;
}
.item-right{
   width:566rpx; 
}
.username{
  font-size: 28rpx;
  letter-spacing: 1px;
  height: 60rpx;
  line-height: 60rpx;
  color:#343434;
  position: relative;
  width:100%;
}
.username text{
  position: absolute;
  letter-spacing: normal;
  display: inline-block;
  top:0;
  bottom: 0;
  right:0;
  font-size: 25rpx;
  color:#999999;
}
.last-msg{
  font-size: 22rpx;
  color: #989898;
  width: 75%;
  height: 29rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.avatar{
  position: relative;
}
.redDot{
  position: absolute;
  top: 5rpx;
  right: 6rpx;
  min-width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: -22rpx;
  font-weight: bold;
  font-size: 22rpx;
  color: white;
  text-align: center;
  background:red;
  border: none;
  border-radius: 40rpx;
  display:inline-block;
}

.Shield-button{
   width: 110rpx;
  height: 66rpx;
  border: 1rpx #fb0a00;
  background: url(http://cdn.haofang.net/static/uuweb/shield.png)  center no-repeat;
  background-size: 100%; 
  position: relative;
  float:right;
  bottom:45rpx;
}
.Shield-button-show{
  display: none;
}
/*消息删除, 屏蔽 按钮*/
.delete-box{
  position: absolute;
  right: -270rpx;
  width: 270rpx;
  top: 0;
  height: 140rpx;
  z-index: 222;
}
.goLeft {
  /* right: 141rpx; */
  transform: translateX(-270rpx);
}


.unblock{
  color: white;
  float: left;
  text-align: center;
  width: 160rpx;
  height:   140rpx;
  line-height:   140rpx;
  letter-spacing:1px;
  background-color:#989898; 
  font-size: 28rpx;
}
.delete{
  color: white;
  font-size: 28rpx;
  float: right;
  width: 110rpx;
  height:   140rpx;
  text-align: center;
  line-height:   140rpx;
  letter-spacing:1px;
  background-color:#fc4c2f;
}

/*屏蔽提示框*/
.toast-tip{
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 200;
}
.toast-tip-tt{
    position: fixed;
    /*width: 230rpx;*/
    padding: 0 20rpx;
    height: 70rpx;
    line-height: 70rpx;
    left: 50%;
    top: 50%;
    margin-top: -70rpx;
    -webkit-transform: translate(-50%,0);
    -moz-transform: translate(-50%,0);
    -ms-transform: translate(-50%,0);
    -o-transform: translate(-50%,0);
    transform: translate(-50%,0);
    text-align: center;
    font-size: 24rpx;
    background-color: rgba(0,0,0,0.7);
    color: #fff;
    border-radius: 8rpx;
}
/*屏蔽提示框end*/