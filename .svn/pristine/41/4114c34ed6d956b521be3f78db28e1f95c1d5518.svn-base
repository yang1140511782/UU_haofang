@import "../../component/localCityToast/localCityToast.wxss";
/* pages/findHouse/findHouse.wxss */
page{
    width: 100%;
    height: 100%;
}
#app{
    position: relative;
    width: 100%;
    height: 100%;
    background:#ffffff;
}
.banner-top{
    position: relative;
    display: block;
    width: 100%;
    height: 362rpx;

}
.cont-wraper {
    position: relative;
    width: 688rpx;
    height: 688rpx;
    margin: 0 auto;
    background: url(http://uuweb.haofang.net/Public/wxApp/images/findHouse/box-bg.png) center center no-repeat;
    background-size: 100% 100%;
}
.cont-wraper-box{
    position: relative;
    width: 100%;
    height: 100%;
    display:flex;
    flex-wrap:wrap;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.cont-box{
    position:relative;
    flex-shrink:0;
    width:50%;
    height:300rpx;
    color:#666666;
    line-height:525rpx;
    font-size:30rpx;
    text-align:center;
    box-sizing:border-box;
    /*animation: showOpacity 0.5s ease;*/
}
@keyframes showOpacity
{
  0% {opacity: 0}
  100% {opacity: 1}
}
.cont-box::before{
    position: absolute;
    top: 75rpx;
    margin: auto;
    content: '';
    width: 130rpx;
    height: 130rpx;
    left: 0;
    right:0;
    background-size: 100% 100%;
    background-position:  center center ;
    background-repeat: no-repeat;
    /*animation: showLine 0.5s ease ;*/
    /*-webkit-animation: showLine 0.5s ease ;*/
    -webkit-animation-duration: 1s;
    animation-duration: 1s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
    -webkit-animation-duration: .75s;
    animation-duration: .75s;
    -webkit-animation-name: bounceIn;
    animation-name: bounceIn;
}

.sale-box::before {animation-delay:0s;  -webkit-animation-delay:0s;  background-image: url(http://uuweb.haofang.net/Public/wxApp/images/findHouse/buy.png) ;}
.lease-box::before{animation-delay:0.1s;-webkit-animation-delay:0.1s;background-image: url(http://uuweb.haofang.net/Public/wxApp/images/findHouse/lease.png) ;}
.buy-box::before  {animation-delay:0.2s;  -webkit-animation-delay:0.2s;  background-image: url(http://uuweb.haofang.net/Public/wxApp/images/findHouse/sale.png) ;}
.rent-box::before {animation-delay:0.3s;-webkit-animation-delay:0.3s;  background-image: url(http://uuweb.haofang.net/Public/wxApp/images/findHouse/rent.png) ;}

/*有奖委托图标*/
.buy-box::after{
    position: absolute;
    top: 290rpx;
    margin: auto;
    content: '';
    width: 124rpx;
    height: 31rpx;
    left: 0;
    right:0;
    background: url(http://uuweb.haofang.net/Public/wxApp/images/registration/publish_icon.png) center no-repeat;
    background-size: 100% 100%;
}

@-webkit-keyframes bounceIn {
  0%, 20%, 40%, 60%, 80%, 100% {
    -webkit-transition-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
    transition-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
  }

  0% {
    opacity: 0;
    -webkit-transform: scale3d(.3, .3, .3);
    transform: scale3d(.3, .3, .3);
  }

  20% {
    -webkit-transform: scale3d(1.1, 1.1, 1.1);
    transform: scale3d(1.1, 1.1, 1.1);
  }

  40% {
    -webkit-transform: scale3d(.9, .9, .9);
    transform: scale3d(.9, .9, .9);
  }

  60% {
    opacity: 1;
    -webkit-transform: scale3d(1.03, 1.03, 1.03);
    transform: scale3d(1.03, 1.03, 1.03);
  }

  80% {
    -webkit-transform: scale3d(.97, .97, .97);
    transform: scale3d(.97, .97, .97);
  }

  100% {
    opacity: 1;
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
}

@keyframes bounceIn {
  0%, 20%, 40%, 60%, 80%, 100% {
    -webkit-transition-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
    transition-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
  }

  0% {
    opacity: 0;
    -webkit-transform: scale3d(.3, .3, .3);
    transform: scale3d(.3, .3, .3);
  }

  20% {
    -webkit-transform: scale3d(1.1, 1.1, 1.1);
    transform: scale3d(1.1, 1.1, 1.1);
  }

  40% {
    -webkit-transform: scale3d(.9, .9, .9);
    transform: scale3d(.9, .9, .9);
  }

  60% {
    opacity: 1;
    -webkit-transform: scale3d(1.03, 1.03, 1.03);
    transform: scale3d(1.03, 1.03, 1.03);
  }

  80% {
    -webkit-transform: scale3d(.97, .97, .97);
    transform: scale3d(.97, .97, .97);
  }

  100% {
    opacity: 1;
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
}

